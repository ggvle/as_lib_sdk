<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.attach.app.netstate"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="app.netstate.activity.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="app.netstate.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 网络状态接收器 -->
        <receiver android:name="yline.application.netstate.NetStateReceiver">
            <intent-filter>

                <!-- WifiManager -->
                <action android:name="android.net.wifi.STATE_CHANGE"/>
                <!-- ConnectivityManager -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <!-- 定时服务 -->
        <service android:name="yline.application.AppService">
        </service>
    </application>

</manifest>
